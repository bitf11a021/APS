@{
    Layout =  "~/Views/Shared/_Layout.cshtml";
}
 @model IEnumerable<APS_abd.Models.adpost>
<!doctype html>
<html>
    <head>
        <meta charset="utf-8">
 @section title {
        <title>AdPosting System</title>
    	}
        <script type="text/javascript" src="~/Scripts/jquery-1.10.1.min.js"></script>
        <script type="text/javascript" src="~/Scripts/jquery.fancybox.js"></script>
	    <link rel="stylesheet" type="text/css" href="~/Content/jquery.fancybox.css" media="screen" />
        <link rel="stylesheet" href="~/Content/style.css" />
        <script type="text/javascript">
              
                /*
                 *  Thumbnail helper. Disable animations, hide close button, arrows and slide to next gallery item if clicked
                 */

                $('.fancybox-thumbs').fancybox({
                    prevEffect: 'none',
                    nextEffect: 'none',


                    helpers: {
                        title: {
                            type: 'outside'
                        },
                        thumbs: {
                            width: 100,
                            height: 100
                        }
                    }
                });
                  
	</script>
        <script type="text/javascript">
		         $(".fancybox").fancybox();
        </script>
	<style type="text/css">
		.fancybox-custom .fancybox-skin {
			box-shadow: 0 0 50px #222;
		}

	</style>
    </head>
    @section body{
    <body>
    	<div class="clearfix"></div>
        <div class="clearfix "></div>
        <div class="clearfix"></div>
        <div class="container">
              <ul class="bxslider">
                  <li><a class="fancybox-thumbs"  data-fancybox-group="thumb" href="~/Images/lap.jpg"><img src="~/Images/lap.jpg" alt="" /></a></li>
                  <li><a class="fancybox-thumbs" data-fancybox-group="thumb" href="~/Images/tiger.jpg"><img src="~/Images/tiger.jpg" alt=""/></a></li>
                  <li><a class="fancybox-thumbs" data-fancybox-group="thumb" href="~/Images/cell.jpg"><img src="~/Images/cell.jpg" alt="" /></a></li>
                  <li><a class="fancybox-thumbs" data-fancybox-group="thumb" href="~/Images/cat.jpg"><img src="~/Images/cat.jpg" alt="" /></a></li>
             </ul>
        </div>
        <div class="clearfix"></div>
         <div class="container">
         <section class="left_area">
           @foreach (var item in Model) {
                 
            	<div class="product_main">
                        
                     	<div class="p_img">
                       		<img src="~/Images/product.jpg" alt="" title="" />
                        </div>
                        <div class="p_des">
                    	    <h3>@Html.DisplayFor(modelItem => item.Title)</h3>
                            <h4>Yesterday 8:30pm, @Html.DisplayFor(modelItem => item.subcategory), @Html.DisplayFor(modelItem => item.Location)</h4>
                           <h4><a href="/Comment/ShowComments/@item.Id">Comments!</a></h4>
                        </div>
                    <div class="p_price">
                    	<h3>Rs,@Html.DisplayFor(modelItem => item.Price)</h3>
                    </div>
                </div>
      <div class="clearfix"></div>
} 
             
         </section>
            <aside>
            	<h1>Category</h1>
                
            	<ul>
                	<li><a href="">animals</a>
                    	<ul>
                            <li><a href="/Homer/Category?cat">Cats</a></li>
                            <li><a href="/Home/Category?dog">Dogs</a></li>
                            <li><a href="/Home/Category?tiger">Tiger</a></li>
                            <li><a href="/Home/Category?lion">Lion</a></li>
                        </ul>
                    </li>
                    <li><a href="">electronics</a>
                        <ul>
                            <li><a href="/Home/Category?AC">Window AC</a></li>
                            <li><a href="/Home/Category?Fan">Fans</a></li>
                            <li><a href="/Home/Category?laptop">Laptops</a></li>
                            <li><a href="/Home/Category?Cellphone">Cellphones</a></li>
                        </ul>
                    </li>
                    <li><a href="">new & used cars & vehicles</a>
                         <ul>
                            <li><a href="/Home/Category?honda">Cars</a></li>
                            <li><a href="/Home/Category?corolla">Mazda</a></li>
                            <li><a href="/Home/Category?nissan">Bus</a></li>
                            <li><a href="/Home/Category?ferrari">Bike</a></li>
                        </ul>
                    </li>
                    <li><a href="">property</a></li>
                    <li><a href="">jobs & services</a></li>
                    <li><a href="">education</a></li>
                    <li><a href="">sports</a></li>
                    <li><a href="">food & agriculture</a></li>
                    <li><a href="">others</a></li>
                </ul>
            </aside>
        </div>
        <div class="clearfix"></div>
      <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.4/jquery.min.js"></script>
   <script src="~/Scripts/jquery.js"></script>
	<script src="~/Scripts/slider.js" type="text/javascript"></script>    
    <script>
    	
  			$('.bxslider').bxSlider();
		
    </script>
        
    </body>
        }
</html>
